<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:paddingTop="1dp"
                                                   android:paddingBottom="1dp"
                                                   style="@style/PrimaryBackgroundColor"
>

    <TextView
            android:text="15:44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/departureTimeTeextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"/>

    <TextView
            android:text="Платформа 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/departurePlatformTextView"
            android:layout_below="@+id/departureTimeTeextView"
            app:layout_constraintStart_toStartOf="@+id/departureTimeTeextView"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@+id/departureTimeTeextView"
            android:layout_marginTop="10dp"/>

    <TextView
            android:text="16:01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arrivalTimeTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>

    <TextView
            android:text="Стандарт плюс"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/typeTitleTextView"
            app:layout_constraintTop_toBottomOf="@+id/travelTimeTextView"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="17 минут"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/travelTimeTextView"
            app:layout_constraintStart_toEndOf="@+id/departureTimeTeextView"
            app:layout_constraintEnd_toStartOf="@+id/arrivalTimeTextView"
            app:layout_constraintTop_toTopOf="@+id/departureTimeTeextView"/>

    <TextView
            android:text="Платформа 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arrivalPlatformTextView"
            app:layout_constraintEnd_toEndOf="@+id/arrivalTimeTextView"
            app:layout_constraintTop_toBottomOf="@+id/arrivalTimeTextView"
            android:layout_marginTop="15dp"/>

    <TextView
            android:text="Через n мин."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/estimatedTime"
            app:layout_constraintStart_toStartOf="@+id/departurePlatformTextView"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/departurePlatformTextView"/>

</androidx.constraintlayout.widget.ConstraintLayout>