<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="15:44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/departureTimeTeextView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp" android:layout_marginTop="20dp"/>
    <TextView
            android:text="16:01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/arrivalTimeTextView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" android:layout_marginEnd="20dp"/>
    <TextView
            android:text="17 минут"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/travelTimeTextView"
            app:layout_constraintStart_toEndOf="@+id/departureTimeTeextView"
            app:layout_constraintEnd_toStartOf="@+id/arrivalTimeTextView"
            app:layout_constraintTop_toTopOf="@+id/departureTimeTeextView"/>
</androidx.constraintlayout.widget.ConstraintLayout>