<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_light_white"
        android:id="@+id/main_constraint_layout"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/main_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_header"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:textSize="25sp"/>
    <Button
            android:text="@string/find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_result_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="setFind_button"
            app:layout_constraintHorizontal_bias="0.532"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"/>

    <androidx.cardview.widget.CardView android:layout_width="200sp"
                                       android:layout_height="wrap_content"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:cardBackgroundColor="@color/material_cyan_50"
                                       app:cardCornerRadius="20sp"
                                       android:id="@+id/cardView"
                                       app:layout_constraintTop_toBottomOf="@+id/main_header"
                                       android:layout_marginTop="50dp">
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
            <AutoCompleteTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textAutoComplete"
                    android:background="@color/material_amber_100"
                    android:ems="10"
                    android:textColor="@color/black"
                    android:layout_marginTop="15sp"
                    android:hint="@string/from"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/from_editText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:imeOptions="actionNext"
                    android:layout_marginBottom="10sp"
                    android:paddingHorizontal="@dimen/cardview_default_elevation"/>
            <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textAutoComplete"
                    android:hint="@string/to"
                    android:fontFamily="@font/montserrat"
                    android:textSize="20sp"
                    android:layout_below="@id/from_editText"
                    android:textColor="@color/black"
                    android:ems="10"
                    android:id="@+id/to_editText"
                    android:background="@color/material_amber_100"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/from_editText"
                    android:imeOptions="actionNext"
                    android:layout_marginTop="10sp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:textSize="20sp"
                    android:layout_below="@id/to_editText"
                    android:hint="@string/date"
                    android:background="@color/material_amber_100"
                    android:layout_marginBottom="15sp"
                    android:layout_marginTop="20sp"
                    android:id="@+id/editTextDate"
                    android:imeOptions="actionSearch"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/from_editText"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/test_field"
            app:layout_constraintTop_toBottomOf="@+id/show_result_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="173dp" android:layout_marginEnd="179dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>